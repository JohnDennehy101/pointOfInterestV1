                    {{/each}}
                    {{else}}
                    <li>No Connacht monuments have been added yet.</li>
                    {{/if}}
                </ul>
            </li>

        </ul>
        <ul class="uk-nav uk-nav-default uk-nav-parent-icon">

            <li class="uk-parent">
                <a href="#" uk-toggle="target: .toggle-display-ulster">Ulster</a>
                <ul class="uk-nav-sub toggle-display-ulster" hidden>
                    {{#if ulsterMonuments}}
