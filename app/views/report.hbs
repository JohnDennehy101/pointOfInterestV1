                    {{/if}}
                </ul>
            </li>

        </ul>
        <ul class="uk-nav uk-nav-default uk-nav-parent-icon">

            <li class="uk-parent">
                <a href="#" uk-toggle="target: .toggle-display-connacht">Connacht</a>
